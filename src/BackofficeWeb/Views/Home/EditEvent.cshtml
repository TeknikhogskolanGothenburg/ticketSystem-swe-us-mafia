@using TicketSystemEngine;
@model OverviewModel
@{
    ViewData["Title"] = "Event Overview";
}
<html>
<head>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
            background-color: white;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
            background-color: white;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
            background-color: white;
        }
    </style>
</head>
<body>

    <h2>Event Dates</h2>

    <table>
        <tr>
            <td>EventName</td>
            <td>Description</td>
            <td>VenueName</td>
            <td>Address</td> 
            <td>City</td> 
            <td>Country</td> 
            <td>Seats</td>
            <td>DateTime</td>
            <td>Price</td>
            <th/>
        </tr>
        
        @if (Model != null)
         {
            @foreach(TicketEventDate date in Model.dates)
             {
                <tr>
                    @foreach (TicketEvent tEvent in Model.events)
                     {
                        if(tEvent.TicketEventId == date.TicketEventID)
                        {
                            <td>@tEvent.EventName</td>
                            <td>@tEvent.EventHtmlDescription</td>
                            <td>@tEvent.TicketEventPrice</td>
                        }
                     }
                    @foreach(Venue venue in Model.venues)
                     {
                        if(venue.VenueId == date.VenueId)
                        {
                            <td>@venue.VenueName</td>
                            <td>@venue.Address</td>
                            <td>@venue.City</td>
                            <td>@venue.Country</td>
                        }

                     }
                    <td>@date.NumberOfSeats</td>
                    <td>@date.EventStartDateTime</td>
                    <td><button type="submit" class="btn btn-default" onclick="myFunction(@date.TicketEventDateID)">"Delete Event/Date"</button></td>
                </tr>

             }
         }
    </table>

</body>
</html>

<script>
    function myFunction(TicketEventDateID) {
        var dataType = 'application/json'

        var datalist = {
        }

        $.ajax({
            type: "DELETE",
            url: "http://localhost:51775/TicketEventDate/" + TicketEventDateID,
            dataType: 'application/json',
            contentType: dataType,
            data: JSON.stringify(datalist),
            success: alertFunction()
        });
    };
</script>
<script>
    function alertFunction() {
        alert("Event Deleted");
    }
</script>
